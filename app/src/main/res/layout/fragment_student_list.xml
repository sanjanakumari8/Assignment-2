<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.StudentListFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_above="@+id/add_student"
            android:id="@+id/recycler_view"
            android:layout_below="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_top"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_student_not_added_error"
            android:layout_centerInParent="true"
            android:textColor="@color/colorTextGreen"
            android:text="@string/error_message_when_no_student_added"
            android:padding="@dimen/padding"
            android:gravity="center_horizontal"
            android:textSize="@dimen/heading_size"/>

        <Button

            android:id="@+id/add_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/margin_top"
            android:text="@string/btn_add_student"
            android:background="@drawable/common_border"
            android:textColor="@color/colorTextGreen"
            android:padding="@dimen/padding"
            android:textStyle="bold"
            android:textSize="@dimen/class_text_size"
            />
    </RelativeLayout>

</FrameLayout>
