<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.HomeActivity"
    >
    <include layout="@layout/toolbar"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:layout_below="@+id/toolbar"
        />

    <TextView
       style="@style/LayoutDesign"
        android:id="@+id/tv_student_not_added_error"
        android:layout_centerInParent="true"
        android:textColor="@color/themeColor"
        android:text="@string/home_no_student_added_yet"
        android:padding="@dimen/padding"
        android:gravity="center_horizontal"/>
    <Button
        android:id="@+id/add_student"
        style="@style/LayoutDesign"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margn_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top"
        android:text="@string/add_student_btn"
        android:background="@drawable/splash_screen_border"
        android:textColor="@color/themeColor"
        android:padding="@dimen/padding"
        android:layout_marginBottom="@dimen/margin_bottom"/>
</RelativeLayout>